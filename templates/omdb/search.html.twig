{% extends 'base.html.twig' %}

{% block title %}Kata Symfony - OMDB Search{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Search Movies on OMDB</h1>
        <form class="d-flex gap-3 w-100" method="get" action="{{ path('omdb_search') }}">
            <div class="form-group w-50">
                <input type="text" name="q" class="form-control" placeholder="Search for a movie..." value="{{ query }}">
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Search</button>
                <a href="{{ path('omdb_search') }}" class="btn btn-secondary ">Reset</a>
            </div>
        </form>
        
        <div class="mt-5 min-vh-100">
            {% if movies is not empty %}
                <h2 class="mt-5">Results</h2>
                <p>Total movies found: {{ movies|length }}</p>
                <div class="row">
                    {% for movie in movies %}
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <figure class="figure w-100">
                                    <img src="{{ movie.poster }}" class="figure-img object-fit-cover w-100 h-auto" alt="{{ movie.title }}">
                                </figure>
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title">{{ movie.title }}</h5>
                                        <p class="card-text">{{ movie.year }} - {{ movie.type }}</p>
                                    </div>
                                    <div class="d-flex justify-content-between mt-4">
                                        <a href="https://www.imdb.com/title/{{ movie.imdbID }}" class="btn btn-outline-primary btn-sm d-flex align-items-center" target="_blank">View on IMDB</a>
                                        <form method="post" action="{{ path('add_to_library', {'imdbID': movie.imdbID}) }}">
                                            <button type="submit" class="btn btn-success btn-sm">Add to my library</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="mt-5">{{ message }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}